---
title: Island94
pageable: true
per_page: 10
---

%section.explore
  .row
    %form#search{:action => "http://google.com/search", :method => "get"}
      %fieldset{:role => "search"}
        %input.form-control{:name => "q", :type => "hidden", :value => "site:island94.org"}
        %input.search.form-control{:name => "q", :placeholder => "Search (via Google)", :results => "0", :type => "text"}

  .row
    .col-md-6
      %h2 Newest articles
      %ol
        - blog.articles[0...5].each do |article|
          %li
            %a{:href => article.url}
              = article.title
    .col-md-6
      %h2 Popular articles
      %ol
        - data.popular_articles[0...5].map{|title| blog.articles.find{|a| a.title.downcase == title.downcase }}.compact.each do |article|
          %li
            %a{:href => article.url}
              = article.title
